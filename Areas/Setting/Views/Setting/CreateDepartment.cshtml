@model QOS.Models.Team_List
@inject Microsoft.Extensions.Localization.IStringLocalizer<QOS.SharedResource> Localizer
@inject Microsoft.Extensions.Localization.IStringLocalizer<QOS.Areas.Setting.SharedResource> SetLocalizer
@{
    Layout = "_MenuSetting";
    ViewData["Title"] = SetLocalizer["AddDepartment"];
}
<style>
    .contents{
        display: grid;
        justify-content: center;
    }
    .mb-3 {
        width:1000px;
        
    }
</style>

<div class=" contents me-3 mt-5 ">
    <h2  class="text-uppercase">@SetLocalizer["AddDepartment"]</h2>

    <form asp-action="CreateDepartment" method="post" class="mb-3">
        <div class="form-group mb-2">
            <label>@SetLocalizer["DepartmentCode"]</label>
            <input asp-for="TeamID" class="form-control" />
        </div>
        <div class="form-group mb-2">
            <label>@SetLocalizer["DepartmentName"]</label>
            <input asp-for="TeamName" class="form-control" />
        </div>
        <div class="form-group mb-2">
            <label>@Localizer["Remark"]</label>
            <input asp-for="Remark" class="form-control" />
        </div>
        @* <div class="form-group">
            <label>Password</label>
            <input asp-for="Pass" type="password" class="form-control" />
        </div>
         *@

        
        
        <button type="submit" class="btn btn-success mt-4">@Localizer["Save"]</button>
        <a asp-action="DepartmentList" class="btn btn-secondary mt-4">@Localizer["Back"]</a>

    </form>
</div>