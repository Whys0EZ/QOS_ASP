@model QOS.Models.FaultCode
@inject Microsoft.Extensions.Localization.IStringLocalizer<QOS.SharedResource> Localizer
@inject Microsoft.Extensions.Localization.IStringLocalizer<QOS.Areas.Function.SharedResource> FuncLocalizer
@{
    ViewData["Title"] = @FuncLocalizer["F_Fault_edit"];
    Layout = "_MenuFunction";
}

<h2>@FuncLocalizer["F_Fault_edit"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Fault_Code" />
    <!-- giống các input ở Create -->
    <div class="mb-3">
        <label>@Localizer["Factory"]</label>
        <input asp-for="Factory" class="form-control" />
    </div>
    <div class="mb-3">
        <label>@FuncLocalizer["F_Fault_Code"]</label>
        <input asp-for="Fault_Code" class="form-control" />
    </div>
    <div class="mb-3">
        <label>@FuncLocalizer["F_Fault_Type"]</label>
        <input asp-for="Fault_Type" class="form-control" />
    </div>
    <div class="mb-3">
        <label>@FuncLocalizer["F_Fault_NameVN"]</label>
        <input asp-for="Fault_Name_VN" class="form-control" />
    </div>
    <div class="mb-3">
        <label>@FuncLocalizer["F_Fault_NameVN"]</label>
        <input asp-for="Fault_Name_EN" class="form-control" />
    </div>
    <div class="form-check">
        <input type="checkbox" name="Form4_Active" value="true" class="form-check-input" @(Model?.Form4_Active == true ? "checked" : "") />
        <input type="hidden" name="Form4_Active" value="false" />
        <label class="form-check-label">@FuncLocalizer["F_Fault_inLine"]</label>
    </div>
    <div class="form-check">
        <input type="checkbox" name="Form6_Active" value="true" class="form-check-input" @(Model?.Form6_Active == true ? "checked" : "") />
        <input type="hidden" name="Form6_Active" value="false" />
        <label class="form-check-label">@FuncLocalizer["F_Fault_endLine"]</label>
    </div>
    <div class="mb-3">
        <label>@Localizer["UserUpdate"]</label>
        <input type="text" class="form-control" value="@User.Identity?.Name" readonly />
        <input type="hidden" asp-for="UserUpdate" value="@User.Identity?.Name" />
    </div>
    <button type="submit" class="btn btn-success">@Localizer["Update"]</button>
    <a asp-action="Index" class="btn btn-secondary">@Localizer["Cancel"]</a>
</form>
