@model QOS.Models.User
@inject Microsoft.Extensions.Localization.IStringLocalizer<QOS.SharedResource> Localizer
@inject Microsoft.Extensions.Localization.IStringLocalizer<QOS.Areas.SystemAdmin.SharedResource> SystemLocalizer
@{
    ViewData["Title"] = "Management User";
    Layout = "_MenuSystem";
}

<div class=" container mt-3">
    <h2>@SystemLocalizer["AddUser"]</h2>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label>@Localizer["Factory"]</label>
            <input asp-for="FactoryID" class="form-control" />
        </div>
        <div class="form-group">
            <label>@SystemLocalizer["Department"]</label>
            <input asp-for="TeamID" class="form-control" />
        </div>
        <div class="form-group">
            <label>@Localizer["Username"]</label>
            <input asp-for="Username" class="form-control" />
        </div>
        <div class="form-group">
            <label>@Localizer["Password"]</label>
            <input asp-for="Pass" type="password" class="form-control" />
        </div>
        <div class="form-group">
            <label>@Localizer["FullName"]</label>
            <input asp-for="FullName" class="form-control" />
        </div>
        <div class="form-group">
            <label>Email</label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label>@SystemLocalizer["UnitCheck"]</label>
            <input asp-for="Unit_Check" class="form-control" />
        </div>
        <div class="form-group">
            <label>@SystemLocalizer["LineCheck"]</label>
            <input asp-for="Line_Check" class="form-control" />
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-success">@Localizer["Save"]</button>
            <a asp-action="Index" class="btn btn-secondary">@Localizer["Back"]</a>
        </div>

    </form>
</div>
