@model QOS.Models.AuthViewModel
@inject Microsoft.Extensions.Localization.IStringLocalizer<QOS.SharedResource> Localizer

@{
    ViewData["Title"] = "Đăng nhập / Đăng ký";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    var activeTab = ViewBag.ActiveTab as string ?? "login"; // mặc định login
}
<style>
    .input-group {
        position: relative;
        width: 100%;
    }

    .form-control-custom {
        width: 100%;
        padding-right: 40px; /* chừa chỗ cho icon */
        border-radius: 10px;
        border: 1px solid #ccc;
        padding: 10px 12px;
        font-size: 16px;
    }

    .toggle-password {
        position: absolute;
        right: 12px;
        top: 30%;
        transform: translateY(-50%);
        cursor: pointer;
        color: #000000ff !important;
        
    }

    .toggle-password:hover {
        color: #333;
    }
</style>
<partial name="_AlertMessage" />
<!-- Animated Background -->
<div class="animated-background">
    <!-- Stars -->
    <div class="stars">
        <div class="star"></div>
        <div class="star"></div>
        <div class="star"></div>
        <div class="star"></div>
        <div class="star"></div>
        <div class="star"></div>
    </div>

    <!-- Moon -->
    <div class="moon"></div>

    <!-- Clouds -->
    <div class="clouds">
        <div class="cloud cloud1"></div>
        <div class="cloud cloud2"></div>
        <div class="cloud cloud3"></div>
    </div>

    <!-- Mountains -->
    <div class="mountain mountain-back"></div>
    <div class="mountain mountain-front"></div>
</div>

<!-- Mặc định hiển thị form Login -->
<div class="container @(ViewBag.ActiveForm == "register" ? "right-panel-active" : "")" id="container">
    <!-- Sign In Form (Login) - Hiển thị đầu tiên -->
    <div class="form-container sign-in">
        <form class="form" asp-controller="Account" asp-action="Auth" method="post">
            <h1 class="mb-3 fw-bold text-uppercase">@Localizer["LoginTitle"]</h1>
            @* <div class="social-container mb-3">
                <a href="#" class="social" title="Google">
                    <i class="fab fa-google-plus-g"></i>
                </a>
                <a href="#" class="social" title="Facebook">
                    <i class="fab fa-facebook-f"></i>
                </a>
                <a href="#" class="social" title="GitHub">
                    <i class="fab fa-github"></i>
                </a>
                <a href="#" class="social" title="LinkedIn">
                    <i class="fab fa-linkedin-in"></i>
                </a>
            </div> *@
            @* <span class="d-block mb-3">hoặc sử dụng tài khoản của bạn</span> *@
            
            <div class="input-group mb-3">
                <input asp-for="Login.Username" class="form-control-custom" placeholder="@Localizer["Username"]" />
                <span asp-validation-for="Login.Username" class="text-danger"></span>
            </div>
            
            <div class="input-group mb-3">
                <input asp-for="Login.Password" type="password" class="form-control-custom" placeholder="@Localizer["Password"]" />
                <span asp-validation-for="Login.Password" class="text-danger"></span>
                <span class="toggle-password" onclick="togglePassword(this)"><i class="fa-solid fa-eye"></i></span>
            </div>
            <script>
                function togglePassword(element) {
                    const passwordInput = document.getElementById('Login_Password');
                    const icon = element.querySelector('i');
                    
                    if (passwordInput.type === 'password') {
                        passwordInput.type = 'text';
                        icon.className = 'fa-solid fa-eye-slash';
                    } else {
                        passwordInput.type = 'password';
                        icon.className = 'fa-solid fa-eye';
                    }
                }
            </script>
            
            <div class="form-check mb-3">
                <input type="checkbox" name="RememberMe" class="form-check-input" id="rememberMe" />
                <label class="form-check-label" for="rememberMe"> @Localizer["RememberMe"]</label>
            </div>
            
            <a href="#" class="forgot-password d-block mb-3">@Localizer["ForgetPass"]</a>
            <input type="hidden" name="actionType" value="login" />
            <button class="btnLogin btn btn-primary w-100 mb-2" type="submit" style="background: linear-gradient(135deg, #dcdde4, #0a63e9) !important;">@Localizer["Login"]</button>
            
            @if (ViewBag.Error != null && ViewBag.ActiveForm == "login")
            {
                <div class="text-danger mt-2">@ViewBag.Error</div>
            }
            
            @Html.AntiForgeryToken()
        </form>
    </div>

    <!-- Sign Up Form (Register) -->
    <div class="form-container sign-up">
        <form class="form" asp-controller="Account" asp-action="Auth" method="post">
            <h1 class="fw-bold mb-3 text-uppercase">@Localizer["Register"]</h1>
            @* <div class="social-container ">
                <a href="#" class="social" title="Google">
                    <i class="fab fa-google-plus-g"></i>
                </a>
                <a href="#" class="social" title="Facebook">
                    <i class="fab fa-facebook-f"></i>
                </a>
                <a href="#" class="social" title="GitHub">
                    <i class="fab fa-github"></i>
                </a>
                <a href="#" class="social" title="LinkedIn">
                    <i class="fab fa-linkedin-in"></i>
                </a>
            </div> *@
            @* <span class="d-block ">hoặc sử dụng email để đăng ký</span> *@
            
            <select  asp-for="Register.FactoryID" asp-items="Model.Register.FactoryOptions" class="form-control">
                <option value="">--Factory--</option>
            </select>
            <span asp-validation-for="Register.FactoryID" class="text-danger"></span>

            <select  asp-for="Register.TeamID" asp-items="Model.Register.TeamOptions" class="form-control">
                <option value="">--Team--</option>
            </select>
            <span asp-validation-for="Register.TeamID" class="text-danger"></span>

            <div class="input-group ">
                <input asp-for="Register.FullName" class="form-control" placeholder="@Localizer["FullName"]" />
                <span asp-validation-for="Register.FullName" class="text-danger"></span>
            </div>

            <div class="input-group ">
                <input asp-for="Register.Email" class="form-control" placeholder="@Localizer["Email"]" />
                <span asp-validation-for="Register.Email" class="text-danger"></span>
            </div>

            <div class="input-group ">
                <input asp-for="Register.Username" class="form-control" placeholder="@Localizer["Username"]" />
                <span asp-validation-for="Register.Username" class="text-danger"></span>
            </div>

            <div class="input-group ">
                <input asp-for="Register.Pass" type="password" class="form-control" placeholder="@Localizer["Password"]" />
                <span asp-validation-for="Register.Pass" class="text-danger"></span>
            </div>

            <div class="input-group ">
                <input asp-for="Register.ConfirmPassword" type="password" class="form-control" placeholder="@Localizer["PasswordRequired"]" />
                <span asp-validation-for="Register.ConfirmPassword" class="text-danger"></span>
            </div>

            <input type="hidden" name="actionType" value="register" />
            <button class="btn btn-success w-100" type="submit">@Localizer["Register"]</button>

            @* <div asp-validation-summary="All" class="text-danger mt-2"></div> *@
            @Html.AntiForgeryToken()
        </form>
    </div>
    
    <!-- Overlay -->
    <div class="overlay-container">
        <div class="overlay">
            <!-- Panel bên trái: hiển thị khi ở chế độ register, nút để quay về login -->
            <div class="overlay-panel overlay-left">
                <h1>@Localizer["LoginTitle"]</h1>
                <p>@Localizer["LoginTitleSub"]</p>
                <button class="ghost" id="signIn">@Localizer["Login"]</button>
            </div>
            <!-- Panel bên phải: hiển thị mặc định, nút để chuyển sang register -->
            <div class="overlay-panel overlay-right">
                <h1>@Localizer["RegTitle"]</h1>
                <p>@Localizer["RegTitleSub"]</p>
                <button class="ghost" id="signUp">@Localizer["Register"]</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/login.js"></script>
    <script>
        // Auto-hide alert messages
        $(document).ready(function() {
            setTimeout(function() {
                $('.alert').fadeOut('slow');
            }, 5000);
        });
    </script>
}
