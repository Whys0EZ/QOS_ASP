@model QOS.Models.FeedbackAdminViewModel
@{
    ViewData["Title"] = "Feedback";
}
<style>
    .alert {
        width: 100%;
        right: 0;
        position: absolute;
    }
</style>
<div>
    @if(Model.Feedbacks.Any())
    {
        var index =1;
        <table class="table table-striped table-border">
            <thead>
                <th>STT</th>
                <th>Username</th>
                <th>Email</th>
                <th>Content</th>
                <th>Status</th>
                <th>Create Date</th>
            </thead>
            <tbody>
                @foreach (var row in Model.Feedbacks)
                {
                    
                    <tr onclick=GetDetail("@row.Id")>
                        <td>@index</td>
                        <td>@row.Username</td>
                        <td>@row.Email</td>
                        <td>@row.Content</td>
                        <td>@row.Status</td>
                        <td>@row.CreatedDate</td>
                    </tr>
                    index++;
                }
                
            </tbody>
        </table>
    }
    else {
        <div class=" alert alert-info text-center p-4 ">
            <i class="bi bi-inbox"></i>
            <h4 class="mt-2">No Feedback Found</h4>
            <p class="text-muted">There are currently no feedback submissions to display.</p>
        </div>
    }
    
</div>

<script>
    function GetDetail(id)
    {
        console.log(id);
        var url = '@Url.Action("Detail", "Contact")' + '?id=' + encodeURIComponent(id);
        window.location.href = url;
    }
</script>