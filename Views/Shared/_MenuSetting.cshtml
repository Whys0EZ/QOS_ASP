@using QOS.Helpers
@{
    Layout = "_Layout";
}

<div class="row">
    <div class="col-2 bg-light min-vh-90 border-end">
        <h3 class="mt-2">THIẾT LẬP</h3>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <a class="nav-link @Html.IsActive(new[] { "Setting" }, new[] { "FactoryList" })" asp-controller="Setting" asp-action="FactoryList">1-Danh sách nhà máy</a>
            </li>
            <li class="list-group-item">
                <a class="nav-link @Html.IsActive(new[] { "Setting" }, new[] { "DepartmentList" })" asp-controller="Setting" asp-action="DepartmentList">2-Danh sách phòng ban</a>
            </li>
            <li class="list-group-item">
                <a class="nav-link @Html.IsActive(new[] { "Setting" }, new[] { "UnitList" })" asp-controller="Setting" asp-action="UnitList">3-Danh sách xưởng</a>
            </li>
        </ul>
    </div>
    <div class="col-10">
        @RenderBody()
    </div>
</div>