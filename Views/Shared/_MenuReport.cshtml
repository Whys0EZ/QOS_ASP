        min-height: 100vh;
        padding: 0;
        box-shadow: 2px 0 10px rgba(0,0,0,0.1);
    }

    .sidebar-header {
        padding: 20px 15px;
        background: rgba(0,0,0,0.2);
        border-bottom: 2px solid rgba(255,255,255,0.1);
    }

    .sidebar-header h3 {
        color: #fff;
        font-size: 18px;
        font-weight: 600;
        margin: 0;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .sidebar-menu {
        max-height: calc(100vh - 80px);
        overflow-y: auto;
        padding: 10px 0;
    }

    /* Menu Items */
    .menu-item {
        margin: 4px 8px;
        border-radius: 8px;
        overflow: hidden;
        transition: all 0.3s ease;
    }

    .menu-item:hover {
        transform: translateX(5px);
    }

    .menu-link {
        display: block;
        padding: 12px 16px;
        color: #ecf0f1;
        text-decoration: none;
        font-size: 13px;
        transition: all 0.3s ease;
        border-left: 3px solid transparent;
        position: relative;
        overflow: hidden;
    }

    .menu-link::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        height: 100%;
        width: 0;
        background: linear-gradient(90deg, rgba(52,152,219,0.2) 0%, transparent 100%);
        transition: width 0.3s ease;
    }

    .menu-link:hover {
        color: #fff;
        background: rgba(255,255,255,0.05);
        border-left-color: #3498db;
        padding-left: 20px;
    }

    .menu-link:hover::before {
        width: 100%;
    }

    /* Active State */
    .menu-link.active {
        background: linear-gradient(90deg, rgba(52,152,219,0.3) 0%, rgba(52,152,219,0.1) 100%);
        color: #fff;
        border-left-color: #3498db;
        font-weight: 600;
        box-shadow: inset 0 0 10px rgba(52,152,219,0.3);
    }

    .menu-link.active::after {
        content: '';
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        width: 6px;
        height: 6px;
        background: #3498db;
        border-radius: 50%;
        box-shadow: 0 0 10px #3498db;
    }

    /* Mobile Button */
    .mobile-menu-btn {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        padding: 12px 24px;
        font-weight: 600;
        box-shadow: 0 4px 15px rgba(102,126,234,0.4);
        transition: all 0.3s ease;
    }

    .mobile-menu-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(102,126,234,0.5);
    }

    /* Offcanvas Styling */
    .offcanvas-modern {
        background: linear-gradient(180deg, #2c3e50 0%, #34495e 100%);
    }

    .offcanvas-modern .offcanvas-header {
        background: rgba(0,0,0,0.2);
        border-bottom: 2px solid rgba(255,255,255,0.1);
    }

    .offcanvas-modern .offcanvas-title {
        color: #fff;
        font-weight: 600;
        letter-spacing: 1px;
    }

    .offcanvas-modern .btn-close {
        filter: invert(1);
        opacity: 0.8;
    }

    /* Main Content Area */
    .main-content {
        padding: 30px;
        background: #f8f9fa;
        min-height: 100vh;
    }

    /* Number Badge */
    .menu-link .menu-number {
        display: inline-block;
        min-width: 24px;
        height: 24px;
        line-height: 24px;
        text-align: center;
        background: rgba(52,152,219,0.2);
        border-radius: 4px;
        margin-right: 8px;
        font-size: 11px;
        font-weight: 600;
    }

    .menu-link:hover .menu-number,
    .menu-link.active .menu-number {
        background: rgba(52,152,219,0.4);
        color: #fff;
    }
