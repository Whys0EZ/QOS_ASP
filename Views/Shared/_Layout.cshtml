<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QOS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QOS.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  border-bottom box-shadow mb-3 nav-appmvc">
            <div class="container-fluid">
                <a class="navbar-brand me-5" asp-area="" asp-controller="Home" asp-action="Index">
                    <img class="logo"  alt="MyWebApp" src="~/images/qos_icon.png" />
                </a>
                
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item me-3">
                            <a class="nav-link text-dark" asp-area="Function" asp-controller="Function" asp-action="Index">Function</a>
                        </li>
                        <li class="nav-item me-3">
                            <a class="nav-link text-dark" asp-area="Report" asp-controller="Report" asp-action="Index">Report</a>
                        </li>
                        <li class="nav-item me-3">
                            <a class="nav-link text-dark" asp-area="Setting" asp-controller="Setting" asp-action="Index">Setting</a>
                        </li>
                        <li class="nav-item me-3">
                            <a class="nav-link text-dark" asp-area="System" asp-controller="System" asp-action="Index">System</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item me-3 pt-2"><span class="navbar-text text-white me-2">Xin chào, @User.Identity.Name</span></li>
                            <li class="nav-item me-3"><a class="btn btn-outline-light" asp-area="" asp-controller="Account" asp-action="Logout">Đăng xuất</a></li>
                        }
                        else
                        {
                            <li class="nav-item me-3"><a class="" asp-area="" asp-controller="Account" asp-action="Login">Đăng nhập</a></li>
                            <li class="nav-item me-3"><a class="" asp-area="" asp-controller="Account" asp-action="Register">Đăng ký</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="wrapper">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            ISD TEAM &copy; 2025 - QOS - <a asp-area="" asp-controller="Home" asp-action="Contact">Liên hệ</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
