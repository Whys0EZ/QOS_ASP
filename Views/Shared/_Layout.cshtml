<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QOS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QOS.styles.css" asp-append-version="true" />
    
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light border-bottom box-shadow mb-3 nav-appmvc">
            <div class="container-fluid">
                <a class="navbar-brand me-5" asp-area="" asp-controller="Home" asp-action="Index">
                    <img class="logo" alt="MyWebApp" src="~/images/qos_icon.png" />
                </a>

                <!-- Nút bấm menu khi màn hình nhỏ -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Menu chính -->
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item me-3">
                            <a class="nav-link text-dark" asp-area="Function" asp-controller="Function" asp-action="Index">CHỨC NĂNG</a>
                        </li>
                        <li class="nav-item me-3">
                            <a class="nav-link text-dark" asp-area="Report" asp-controller="Report" asp-action="Index">Báo Cáo</a>
                        </li>
                        <li class="nav-item me-3">
                            <a class="nav-link text-dark" asp-area="Setting" asp-controller="Setting" asp-action="FactoryList">Thiết Lập</a>
                        </li>
                        <li class="nav-item me-3">
                            <a class="nav-link text-dark" asp-area="SystemAdmin" asp-controller="SystemAdmin" asp-action="Index">Hệ Thống</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item me-3 pt-2">
                                <span class="navbar-text text-dark me-2">Xin chào, @User.Identity.Name</span>
                            </li>
                            <li class="nav-item me-3">
                                <a class="btn btn-outline-light" asp-area="" asp-controller="Account" asp-action="Logout">Đăng xuất</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item me-3"><a class="btn btn-outline-light" asp-area="" asp-controller="Account" asp-action="Login">Đăng nhập</a></li>
                            <li class="nav-item me-3"><a class="btn btn-outline-light" asp-area="" asp-controller="Account" asp-action="Register">Đăng ký</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="wrapper">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            ISD TEAM &copy; 2025 - QOS - <a asp-area="" asp-controller="Home" asp-action="Contact">Liên hệ</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/jquery-3.6.0.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
